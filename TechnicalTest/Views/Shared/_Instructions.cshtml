@model TechnicalTest.Models.HomeModel
@{
    Layout = null;
}
<body>
<div class="container">
    <h2 class="text-center" style="position: inherit">Drink Choice - @ViewBag.DrinkTitle</h2>
    <div id="carouselExampleControls" class="carousel slide" data-interval="false" data-bs-ride="carousel">
                      <div class="carousel-inner">


            @foreach(var instruction in Model.instructionList)
            {

                <div class="carousel-item @(instruction.InstructionOrder == 1 ? "active" : "")">
                  <img class="d-block w-100 carousel-image" src="@instruction.InstructionImage" alt="First slide">
                    <div class="carousel-caption d-none d-md-block">
                    <h5>@instruction.InstructionDetails</h5>
                  </div>
                </div>

            }
            </div>
              <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>     
    </div>
</body>